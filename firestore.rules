rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to site content
    match /artifacts/{appId}/public/data/site_content/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access to gallery
    match /artifacts/{appId}/public/data/gallery/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access to logo
    match /artifacts/{appId}/public/data/logo/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access to reviews
    match /artifacts/{appId}/public/data/reviews/{document=**} {
      allow read: if true;
      allow write: if true;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
